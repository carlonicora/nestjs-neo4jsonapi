{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "tools/**/*.spec.ts",
    "tools/**/__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
